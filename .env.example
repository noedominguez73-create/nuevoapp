DB_POOL_MAX=10
DB_POOL_MIN=0
DB_SSL=false

# ==========================================
# JWT - JSON Web Token
# ==========================================
# Genera uno seguro: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET=8fba6877520b249d21d54ab635c2d99e5e18a13bbca
JWT_EXPIRES_IN=7d

# ==========================================
# GOOGLE GEMINI API
# ==========================================
# Obtén tu API key en: https://makersuite.google.com/app/apikey

GOOGLE_GEMINI_API_KEY=tu-api-key-aqui

# ==========================================
# OPENAI API (Opcional)
# ==========================================
# Solo si usas GPT-4, DALL-E, etc.

OPENAI_API_KEY=

# ==========================================
# REPLICATE API (Opcional)
# ==========================================
# Para modelos de imagen como Stable Diffusion

REPLICATE_API_TOKEN=

# ==========================================
# ANTHROPIC API (Opcional)
# ==========================================
# Para Claude AI

ANTHROPIC_API_KEY=

# ==========================================
# GOOGLE VERTEX AI (Opcional)
# ==========================================
# Para Vertex AI y servicios avanzados

GOOGLE_PROJECT_ID=
GOOGLE_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./vertex-key.json

# ==========================================
# APPLICATION CONFIG
# ==========================================

NODE_ENV=development
PORT=3000

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# CORS Origins (separados por coma)
# Producción: https://tu-dominio.com,https://www.tu-dominio.com
# Desarrollo: *
CORS_ORIGIN=*

# Uploads directory
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Session
SESSION_SECRET=otra-clave-secreta-aqui

