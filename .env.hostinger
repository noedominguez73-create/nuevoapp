# ==========================================
# üîê SEGURIDAD (OBLIGATORIO)
# ==========================================

# JWT Secret - Generar con: openssl rand -hex 32
# O desde: https://www.random.org/strings/
JWT_SECRET=CAMBIA_ESTO_POR_UN_SECRET_REAL_DE_64_CARACTERES_MINIMO

# CORS Origins - Tus dominios (separados por coma, SIN espacios)
CORS_ORIGIN=https://tu-dominio.com,https://www.tu-dominio.com

# Ambiente (DEJAR EN production)
NODE_ENV=production

# ==========================================
# üíæ DATABASE - MySQL Hostinger
# ==========================================
# Obtener de: Panel Hostinger ‚Üí Bases de Datos

DB_HOST=localhost
DB_PORT=3306
DB_NAME=u182581262_appnode
DB_USER=u182581262_appnode
DB_PASSWORD=TU_PASSWORD_MYSQL_AQUI

# Database opcionales
DB_LOGGING=false
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_SSL=false

# ==========================================
# ü§ñ GOOGLE GEMINI API
# ==========================================
# Obtener de: https://makersuite.google.com/app/apikey

GOOGLE_GEMINI_API_KEY=TU_API_KEY_DE_GEMINI_AQUI

# ==========================================
# üîë OTROS PROVEEDORES IA (Opcional)
# ==========================================

# OpenAI (si lo usas)
OPENAI_API_KEY=

# Replicate (si lo usas)
REPLICATE_API_TOKEN=

# Anthropic Claude (si lo usas)
ANTHROPIC_API_KEY=

# ==========================================
# ‚öôÔ∏è CONFIGURACI√ìN APP
# ==========================================

PORT=3000
LOG_LEVEL=warn

# Uploads y archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ==========================================
# ‚úÖ CHECKLIST PRE-DEPLOY
# ==========================================
# Antes de subir, verifica:
# ‚ñ° JWT_SECRET generado (64+ caracteres)
# ‚ñ° CORS_ORIGIN con tu dominio real
# ‚ñ° DB_PASSWORD de Hostinger
